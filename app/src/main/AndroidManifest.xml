<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gesanidas.housemd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:launchMode="singleTop" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
        <activity android:name=".DiagnosisActivity" />
        <activity android:name=".SettingsActivity" />

        <provider
            android:name="com.gesanidas.housemd.data.SymptomsContentProvider"
            android:authorities="com.gesanidas.housemd"
            android:exported="false"/>

        <service android:name=".sync.SymptomsSyncIntentService"
            android:exported="false" />

        <service
            android:name=".sync.SymptomsFirebaseJobService"
            android:exported="false">
            <!-- COMPLETED (9) Declare an intent filter with the action ACTION_EXECUTE -->
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>


    </application>
    <meta-data android:name="android.app.default_searchable"
        android:value=".MainActivity" />
</manifest>