<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_diagnosis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gesanidas.housemd.DiagnosisActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="72dp"
        android:id="@+id/textView" />


    <RadioButton android:id="@+id/radio_unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't know"
            android:onClick="onRadioButtonClicked"
        android:layout_marginEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <RadioButton android:id="@+id/radio_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:onClick="onRadioButtonClicked"
        android:layout_alignBaseline="@+id/radio_unknown"
        android:layout_alignBottom="@+id/radio_unknown"
        android:layout_alignEnd="@+id/textView" />

    <RadioButton android:id="@+id/radio_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:onClick="onRadioButtonClicked"
        android:layout_marginStart="30dp"
        android:layout_alignBaseline="@+id/radio_no"
        android:layout_alignBottom="@+id/radio_no"
        android:layout_alignParentStart="true" />

</RelativeLayout>
